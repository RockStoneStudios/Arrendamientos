extends ../layout/index

block contenido
    div.py-6
        h1.text-3xl.mt-0.mb-5.font-extrabold.text-center Bienes 
           span.font-normal Raices 
        h2.text-center.text-3xl.font-extrabold=pagina

        if errores
           div(class="max-w-md mx-auto my-10")
              each error in errores 
                  p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded.md= error.msg

        .mt-8.mx-auto.max-w-md
           .bg-white.py-6.px-4.shadow.rounded-md
              

               form.space-y-5(action="/auth/registro" method="POST")
                                       div
                                          label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Nombre
                                          input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="text", placeholder="Tu Nombre", name="nombre",value= usuario ? usuario.nombre : '')
                                       div
                                          label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Correo electronico
                                          input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email", placeholder="Tu Correo", name="email",value= usuario ? usuario.email : '')    
                                       div
                                          label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Password
                                          input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password", placeholder="Password", name="password",value=password)
                                       div
                                          label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="repetir_password") Repetir Password
                                          input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password", placeholder="Repetir Password", name="repetir_password",value=repetir_password)
                                       .flex.items-center.justify-between 
                                          a.text-gray-500.text-xs(href="/auth/login")  Â¿Ya tienes Cuenta? Inicia Sesion
                                          a.text-gray-500.text-xs(href="/auth/olvide-password")  Olvide mi Password
                                       input(class="w-full bg-indigo-600 hover:bg-indigo-800 rounded-md py-2 px-3 mb-3 uppercase text-white text-lg cursor-pointer" type="submit",value= "Registrarse")