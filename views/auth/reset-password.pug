extends ../layout/index

block contenido
    div.py-6
        h1.text-3xl.mt-0.mb-5.font-extrabold.text-center Bienes 
           span.font-normal Raices 
        h2.text-center.text-3xl.font-extrabold=pagina

        if errores
           div(class="max-w-md mx-auto my-10")
              each error in errores 
                  p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded.md= error.msg  
           

        .mt-8.mx-auto.max-w-md
           .bg-white.py-6.px-4.shadow.rounded-lg
              

               form.space-y-5(method="POST")
                                       
                                       div
                                          label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Ingresa Nuevo Password
                                          input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password", placeholder="Nuevo Password", name="password",value=password)    
                                       
                                       
                                       input(class="w-full bg-indigo-600 hover:bg-indigo-800 rounded-md py-2 px-3 mb-3 uppercase cursor-pointer text-white text-lg" type="submit",value= "Guardar Password")