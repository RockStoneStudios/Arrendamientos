extends ../layout/admin
    
  

block contenido
    h2(class="text-3xl font-bold text-center my-10")= pagina

    a(href="/mis-propiedades" class=" rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-white text-center uppercase cursor-pointer inline-block my-5 w-full md:w-auto") Volver 

    div(class="mx-auto max-w-4xl bg-white shadow")
        if mensajes.length 
           
            ul
                each mensaje in mensajes
                    li(class="border-gray-300 border-b p-5")
                        p(class="font-bold text-gray-700") Nombre: 
                            span(class="font-medium")= mensaje.Usuario.nombre
                        p(class="font-bold text-gray-700") Email: 
                            span(class="font-medium")= mensaje.Usuario.email    
                        p(class="font-bold text-gray-700") Mensaje
                            span(class="font-medium")= mensaje.mensaje 
                        p(class="font-bold text-gray-700") Enviado
                            span(class="font-medium")= mensaje.createdAt     
        else 
            p(class="text-center text-gray-600 p-5 font-medium") No hay Mensajes    