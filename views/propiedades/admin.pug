extends ../layout/admin

block contenido
    div.py-6
        h1.text-3xl.mt-0.mb-5.font-extrabold.text-center Bienes 
           span.font-normal Raices 
        h2.text-center.text-3xl.font-extrabold=pagina

        a(href="/propiedades/crear" class=" rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-white text-center uppercase cursor-pointer inline-block my-5 w-full md:w-auto") Publicar Propiedades


        if propiedades.length 
            div(class="bg-white shadow-md rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades
                        li 
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(src=`uploads/${propiedad.imagen}`, alt=`Imagen Propiedad ${propiedad.titulo}` class="w-full block rounded-sm")
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3")
                                    a(href=`propiedad/${propiedad.id}` class="block text text-2xl font-extrabold text-indigo-600 truncate")= propiedad.titulo
                                    p(class="text-sm text-black font-semibold")=propiedad.categoria.nombre
                                    p(class="text-sm text-gray-600")
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        =propiedad.Precio.nombre
                                       
                                    a(href=`/mensajes/${propiedad.id}` class="text-sm text-gray-500 font-medium")= `${propiedad.Mensajes.length} Mensajes`
                                div(class="sm:w-1/4 md:w-2/6 lg:w-1/6 space-y-2 lg:flex-1 flex flex-col lg:flex-row  gap-2")
                                    form(action="#" method) 
                                        input(type="submit" class=` w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold  rounded-sm cursor-pointer ${propiedad.publicado ? 'bg-green-100 text-green-800' : 'bg-reed-100 text-yellow-800'}` value=`${propiedad.publicado ? 'Publicado' : 'No Publicado'}`)
                                    a(href=`/propiedades/editar/${propiedad.id}` class="px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm text-center cursor-pointer bg-indigo-700 text-white") Editar

                                    form(action=`/propiedades/eliminar/${propiedad.id}` method="POST") 
                                        input(type="submit" class=" w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm cursor-pointer bg-red-600 text-white"  value="Eliminar")
                                    
                div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6")
                    div(class="flex-1 flex justify-between sm:hidden") 
                        a(href=`/mis-propiedades?pagina${paginaActual - 1}` class=`${paginaActual === "1" ? "pointer-events-none":""}relative inline-flex items-center border px-4 py-3 border-gray-300 text-sm font-medium rounded-sm text-gray-700 bg-white hover:gb-gray-50`) Anterior
                        a(href=`/mis-propiedades?pagina${paginaActual + 1}` class=`${paginaActual === "1" ? "pointer-events-none":""} relative inline-flex items-center border px-4 py-3 border-gray-300 text-sm font-medium rounded-sm text-gray-700 bg-white hover:gb-gray-50`) Siguiente
                    div(class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between")
                        p(class="text-sm text-gray-700 gap-2") Mostrando 
                            span(class="font-medium") #{offset+1}  a 
                            span(class="font-medium") #{total < limit+offset ? total : limit+offset}  de  
                            span(class="font-medium") #{total}  resultados
                    div(class="hidden sm:block")
                        nav(class="relative z-0 inline-flex rounded-md shadow-md")
                            - let n=1;
                                while n<= paginas 
                                    a(href=`/mis-propiedades?pagina=${n}` class=` ${paginaActual == n ? 
                                    'bg-indigo-50 border-indigo-500 text-indigo-600 rounded-md':
                                    'bg-white border-gray-300 text-gray-500 hover:bg-gray-50'} relative inline-flex items-center px-4 py-2 border text-sm font-medium`) #{n++}      
        else 
            p.text-center No hay Propiedades